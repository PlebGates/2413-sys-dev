<Window x:Class="KPU_Faculty_Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPU_Faculty_Scheduler"
        mc:Ignorable="d"
        Title="KPU Faculty Scheduler" Height="250" Width="250" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" MinWidth="300" MinHeight="350" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="importButton" Content="Import Schedule" HorizontalAlignment="Center" Margin="0,0,0,60" VerticalAlignment="Bottom" Width="175" Grid.ColumnSpan="2" Height="75" Click="importButton_Click"/>
        <Button x:Name="createButton" Content="Create Schedule" HorizontalAlignment="Center" VerticalAlignment="Top" Width="175" Grid.ColumnSpan="2" Margin="0,60,0,0" Height="75" Click="createButton_Click"/>
    </Grid>
</Window>
