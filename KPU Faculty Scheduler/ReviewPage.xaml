<Page x:Class="KPU_Faculty_Scheduler.ReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KPU_Faculty_Scheduler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewPage" Width="400" Height="400">

    <Grid Width="400" Height="400">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="10,60,0,15" Stroke="Black" Width="380"/>
        <Label x:Name="roomHeader" Content="Review" HorizontalAlignment="Center" Margin="137,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
        <ListBox x:Name="Review_Listbox" HorizontalAlignment="Left" Height="200" Margin="20,110,0,0" VerticalAlignment="Top" Width="360"/>
        <StackPanel HorizontalAlignment="Center" Height="35" Margin="0,68,0,0" VerticalAlignment="Top" Width="300" Orientation="Horizontal">
            <Button x:Name="reviewCourses" Content="Course" Height="35" Width="100" Click="reviewCourses_Click"></Button>
            <Button x:Name="reviewRoom" Content="Room" Height="35" Width="100" Click="reviewRoom_Click"></Button>
            <Button x:Name="reviewProf" Content="Professor" Height="35" Width="100" Click="reviewProf_Click"></Button>
        </StackPanel>

    </Grid>
</Page>
